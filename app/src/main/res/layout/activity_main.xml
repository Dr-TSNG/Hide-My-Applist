<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/xposed_status"
        style="@style/DefaultCard"
        android:layout_marginTop="18dp">

        <LinearLayout
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/xposed_status_icon"
                style="@style/DefaultCardImage" />

            <LinearLayout
                style="@style/Default"
                android:orientation="vertical"
                android:paddingTop="25dp"
                android:paddingBottom="25dp">

                <TextView
                    android:id="@+id/xposed_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xposed_status_sub_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_detection_test"
        style="@style/DefaultCard"
        app:cardElevation="0dp">

        <LinearLayout
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                style="@style/DefaultCardImage"
                android:src="@drawable/ic_detection" />

            <TextView
                style="@style/DefaultCardText"
                android:text="@string/title_detection_test"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_template_manage"
        style="@style/DefaultCard"
        app:cardElevation="0dp">

        <LinearLayout
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                style="@style/DefaultCardImage"
                android:src="@drawable/ic_template" />

            <TextView
                style="@style/DefaultCardText"
                android:text="@string/title_template_manage"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_scope_manage"
        style="@style/DefaultCard"
        app:cardElevation="0dp">

        <LinearLayout
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                style="@style/DefaultCardImage"
                android:src="@drawable/ic_apps" />

            <TextView
                style="@style/DefaultCardText"
                android:text="@string/title_scope_manage"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_settings"
        style="@style/DefaultCard"
        app:cardElevation="0dp">

        <LinearLayout
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                style="@style/DefaultCardImage"
                android:src="@drawable/ic_settings" />

            <TextView
                style="@style/DefaultCardText"
                android:text="@string/title_settings"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_about"
        style="@style/DefaultCard"
        app:cardElevation="0dp">

        <LinearLayout
            style="@style/Default"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                style="@style/DefaultCardImage"
                android:src="@drawable/ic_about" />

            <TextView
                style="@style/DefaultCardText"
                android:text="@string/title_about"
                android:textAppearance="?attr/textAppearanceHeadline6" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>